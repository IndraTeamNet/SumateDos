
@{
    ViewBag.Title = "ConsultaEventos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Consulta de Actividades</h1>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 p-l-0 title-margin-left">
                    <div class="page-header">
                        <div class="page-title">
                        </div>
                    </div>
                </div>
            </div>
            <section>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card alert">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label for="tags">Filtros Actividades: </label>
                                        <div class="input-group">
                                            <input id="EventoID" class="form-control input-flat" placeholder="Evento">
                                            <div class="input-group-addon">
                                                <i class="fa fa-search"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group hidden">
                                    <input type="text" class="form-control" id="hdfProSel" />
                                </div>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label id="aluOEmp">Ciclo Lectivo</label>
                                        <select id="selAnioLectivo" class="form-control bg-ash border-none">
                                            <option value="2019" selected>2019</option>
                                            <option value="2020">2020</option>
                                            <option value="2020">2021</option>
                                            <option value="2020">2023</option>
                                            <option value="2020">2024</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <button type="button" class="btn m-b-10 m-t-35 btn-info m-r-10 sbmt-btn border-none" onclick="GetEventos();">Buscar</button>
                                    @*<button type="button" id="btnLimpiar" class="btn m-b-10 m-t-35 btn-primary m-r-10 sbmt-btn border-none pull-left">Limpiar</button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section id="main-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card alert">
                            <div class="card-header m-b-20">
                                <h4>Listado de Actividades</h4>
                            </div>
                            <div class="bootstrap-data-table-panel">
                                <div class="table-responsive">
                                    <table id="tablaDatos" class="table table-bordered table-responsive table-hover table-striped tabla-centrada">
                                        <thead id="theadEventos" style="visibility:hidden;">
                                            <tr>
                                                <th>Evento</th>
                                                <th>Estado</th>
                                                <th>Estado 2</th>
                                                <th>Tiempo</th>
                                                <th>Agencia</th>
                                                <th>Barrio</th>
                                                <th>Localidad</th>
                                                <th>Municipio</th>
                                                <th>Placa</th>
                                                <th>Fecha Carga</th>
                                                <th>Fecha Inicio</th>
                                                <th>Fecha Fin</th>
                                                <th>Tipo</th>
                                                <th>Colaborador</th>
                                                <th>Responsable</th>
                                                <th>N° Contacto</th>
                                                <th>Cédula</th>
                                                <th>Dirección</th>
                                                <th>Tipo Trabajo</th>
                                                <th>CoordX</th>
                                                <th>CoordY</th>
                                                <th>Origen</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script src="~/assets/js/lib/jquery.min.js"></script>
<script src="~/Scripts/ScriptsViews/ConsultaEventos.js"></script>
